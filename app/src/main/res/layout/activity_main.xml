<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/img_1">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="115dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:src="@drawable/ss"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess The Number [1-100]"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="28sp"/>
        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/clicks"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/white"
            android:textSize="28sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <EditText
            android:id="@+id/txtNumberinput"

            android:layout_width="237dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:background="#fff"
            android:fontFamily="sans-serif"
            android:hint="Enter a Number"
            android:paddingLeft="20dp"
            android:textColor="#171616"
            android:textColorHint="#171616"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279" />

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="224dp"
            android:layout_height="43dp"
            android:layout_margin="10dp"
            android:background="#fff"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Message On Guess"
            android:textColor="#171616"
            android:textColorHint="#171616"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumberinput"
            app:layout_constraintVertical_bias="0.103" />

        <Button
            android:id="@+id/btnplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif"
            android:text="Guess The Number"
            android:textColor="#171616"
            android:textColorHint="#171616"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textMessage"
            app:layout_constraintVertical_bias="0.151" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="158dp"
            android:layout_height="300dp"
            android:paddingTop="70dp"
            android:src="@drawable/manbg1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>